@model dynamic

<h4>Expense Code Sub-Allotment </h4>
<h5><strong>@ViewBag.Title > @ViewBag.UACS_CODE</strong></h5>
<form action="@Url.Action("ExpenseSuballotment","Allotments")" method="post">
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tr>
                    <td class="col-md-1">Desription</td>
                    <td class="col-md-1">:</td>
                    <td class="col-md-10">
                        <input type="text" name="description" class="form-control" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div id="expense_suballotment" style="width: 100%; height: 200px; overflow: hidden;" data-originalstyle="width: 90%; height: 200px; overflow: hidden" data-get="@Url.Action("GetExpenseCodeAllotment","Allotments")" data-save="@Url.Action("SaveExpenseSubAllotment","Allotments")" data-fundsource="@ViewBag.fundsource" data-uacs="@ViewBag.uacs"></div>
        </div>
    </div>
</form>
<script>
       var expense_codes = [];
       var container = document.getElementById("expense_suballotment");
       var table;
       var valid = true;
       var expense_url = $("expense_suballotment").data('expense');
       table = new Handsontable(container, {
           startRows: 10,
           startCols: 4,
           manualColumnResize: true,
           rowHeaders: true,
           colWidths: [1, 200, 300, 300],
           stretchH: 'all',
           colHeaders: true,
           contextMenu: ['row_above','row_below','remove_row','copy'],
           manualColumnMove: true,
           fillHandle: {
               autoInsertRow: false,
           },
           colHeaders: ['ID','UACS','Title','Amount'],
           columns : [
              {}, { type: 'dropdown', source: expense_codes }, {}, {}
           ],
           cells: function (r, c, prop) {
               var cellProperties = {};
               if (c === 0) cellProperties.readOnly = true;
               return cellProperties;
           },
           beforeRemoveRow: function (index, column) {
               var items = this.getData();
               var row_item = items[index];
               var url = $("expense_suballotment").data('delete');

               var ps = {
                   "ID": row_item[0]
               };
               var data = {
                   data: JSON.stringify(ps)
               };
               $.post(url, data, function (resdata) {

               });
           }
       });
       $(document).ready(function () {
           $.get(expense_url, function (expense_res) {
               if (expense_res.length > 0) {
                   for (var i = 0; i < expense_res.length; i++) {
                       expense_codes[i] = expense_res[i]["Code"];
                   }
               }
           });

           var saahdr = $("expense_suballotment").data('saaamt');
           var data = {
               fsh: saahdr
           };
           var url = $("expense_suballotment").data('get');
           $.get(url, data, function (resdata) {
               if (resdata.length > 0) {
                   var tabledata = [];
                   var total;
                   for (var i = 0; i < resdata.length; i++) {
                       tabledata[i] = new Array(resdata[i]['ID'], resdata[i]['ExpenseCode'], resdata[i]['Title'], numberWithCommas(resdata[i]['Amount']));
                   }
                   table.loadData(tabledata);
               }
           });
       });

       $("#submit").click(function () {
           $("#loading_modal").modal('show');
           var prexc = $("#prexcode").val();
           var source_title = $("#source_title").val();
           var description = $("input[name='description']").val();
           var title_code = $("#title_code").val();
           var url = $("#source_form").prop('action');
           var tabledata = table.getData();
           var expense = [];
           for (var i = 0; i < tabledata.length; i++)
           {
               expense[i] = {
                   "ID": tabledata[i][0],
                   "expense_code": tabledata[i][1],
                   "amount" : tabledata[i][3]
               };
           }
           var data = {
               ID : $("expense_suballotment").data('saaamt'),
               prexcode: prexc,
               source_title: source_title,
               description: description,
               title_code : title_code,
               data: JSON.stringify(expense)
           };
           setTimeout(function () {
               $.post(url, data, function (res) {
                   $("#loading_modal").modal('hide');
                   window.location.href = res;
               });
           }, 1000);
       });
</script>