@model IEnumerable<Allotments>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>@GlobalData.Year Budget Allotments</h2>
            <div class="panel panel-default">
                <div class="panel-heading"><a href="@Url.Action("Create","Allotments")" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Add new Allotment</a></div>
                <div class="panel-body">
                    <table class="table">
                        <tr>
                            <th>Title</th>
                            <th>Code</th>
                            <th>Action</th>
                            <th>For Fund Source</th>
                            <th>For Sub-Allotment</th>
                        </tr>
                        @foreach(Allotments data in Model)
                        {
                            <tr>
                                <td style="font-size:1em;">@data.Title</td>
                                <td style="font-size:1em;">@data.Code</td>
                                <td>
                                    
                                    <a href="@Url.Action("EditBudget","Allotments", new { id = data.ID })" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                                    <a href="@Url.Action("Delete","Allotments",new { id = data.ID })" class="btn btn-danger" onclick="return confirm('Do you want to delete this budget');"><span class="glyphicon glyphicon-trash"></span> Delete</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("FundSource","Allotments",new { id = data.ID })" class="btn btn-success"><span class="glyphicon glyphicon-arrow-right"></span> Fund Source</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("SubAllotment","Allotments", new { allotment = data.ID })" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Sub-Allotment</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section footer{
    @Html.Partial("footer")    
}

