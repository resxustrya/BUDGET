@model IEnumerable<Allotments>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <h2>@GlobalData.Year Budget Allotments</h2>
            <div class="panel panel-default">
                <div class="panel-heading"><a href="@Url.Action("Create","Allotments")" class="btn btn-success">Add new Allotment</a></div>
                <div class="panel-body">
                    <table class="table">
                        <tr>
                            <th>Title</th>
                            <th>Action</th>
                        </tr>
                        @foreach(Allotments data in Model)
                        {
                            <tr>
                                <td style="font-size:1em;">@data.Title</td>
                                <td>
                                    <a href="@Url.Action("FundSource","Allotments",new { id = data.ID })" class="btn btn-success">Fund Source</a>
                                    <a href="@Url.Action("EditBudget","Allotments", new { id = data.ID })" class="btn btn-info">Edit</a>
                                    <a href="@Url.Action("Delete","Allotments",new { id = data.ID })" class="btn btn-danger" onclick="return confirm('Do you want to delete this budget');">Delete</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

