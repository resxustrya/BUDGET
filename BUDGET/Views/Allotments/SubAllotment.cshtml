
@{
    ViewBag.Title = "Sub-Allotment";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Header</h2>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="@Url.Action("CreateSubAllotment","Allotments")" class="btn btn-info"><span class="glyphicon glyphicon-plus"></span> Add new Sub-Allotment</a>
                    <div class="pull-right">
                        <div class="btn-group">
                            <a href="@Url.Action("Index","Allotments", new { id = GlobalData.allotment })" class="btn btn-warning">
                                <span class="glyphicon glyphicon-arrow-left"></span> Back
                            </a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table">
                        <tr>
                            <th>Title</th>
                            <th>PREXC Code</th>
                            <th>Action</th>
                            <th>Realignment</th>
                        </tr>
                        @foreach(FundSourceHdr fsh in Model)
                        {
                            <tr>
                                <td>@fsh.SourceTitle</td>
                                <td>@fsh.prexc</td>
                                <td>
                                    <a href="@Url.Action("EditSubAllotment","Allotments", new { ID = fsh.ID})" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                                    <a href="@Url.Action("DeleteSubAllotment","Allotments", new { ID = fsh.ID })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')"><span class="glyphicon glyphicon-trash"></span> Delete</a>
                                </td>
                                <td><a href="@Url.Action("Realignment","Allotments", new { fundsource = fsh.ID })" class="btn btn-info"><span class="glyphicon glyphicon-transfer"></span> Funds Realignment</a></td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section footer{
    @Html.Partial("footer")
}