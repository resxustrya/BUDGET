
@model PagedList.IPagedList<YearBudget>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}



<div class="modal show" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="row">
                <div class="col-md-12 text-center">
                    <img src="@Url.Content("~/Content/img/ro7.png")" height="150" width="150" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <h3>DOH RO7</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table class="table">
                                @foreach (YearBudget yb in Model)
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Year","Budgets",new { id = yb.ID })" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> @yb.Year Budget</a>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a href="@Url.Action("DeleteYear","Budgets",new { id = yb.ID })" class="btn btn-danger" onclick="return confirm('Do you want to delete this year?');">Delete</a>
                                            }
                                            
                                        </td>
                                    </tr>
                                }
                            </table>
                            <div class="pagination">
                                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                                of @Model.PageCount
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

                                @if (User.IsInRole("Admin"))
                                {
                                    <a href="@Url.Action("Create","Budgets")" class="btn btn-success btn-sm">Create New</a>
                                }
                                <br />
                                <a href="@Url.Action("LogOff","Account")">Logout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
