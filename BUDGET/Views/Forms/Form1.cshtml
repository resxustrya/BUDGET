
@{
    ViewBag.Title = "Form1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Form1</h2>
@using (Html.BeginForm("UploadForm1", "Forms", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table>
        <tr>
            <td>File:</td>
            <td>
                <input type="file" name="file" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" name="Submit" value="Submit" />
            </td>
        </tr>
    </table>
}