@using Microsoft.AspNet.Identity
@{ 
    BudgetDB db = new BudgetDB();
    var allotments = (from list in db.allotments select list).ToList();
    var orslist = (from list in db.orsmaster where list.Year == GlobalData.Year select list).ToList();
}
<nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0;background-color:white;min-height: 20px;">
    <div class="navbar-header" style="background-color:white;">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/" style="background-color:#2ECC71;color:white;">Budget Sys </a>
    </div>
        <ul class="nav navbar-top-links navbar-left" style="background-color:white;color:#000;">
            @if (Session["year"] != null)
            {
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <b>ORS <i class="fa fa-caret-down"></i></b>
                    </a>
                    <ul class="dropdown-menu dropdown-tasks">
                        @if(orslist.Count > 0)
                        {
                            foreach(ORSMaster orsmaster in orslist)
                            {
                                <li><a href="@Url.Action("OrsItem","Ors",new { ID = orsmaster.ID })">@orsmaster.Title</a></li>
                            }
                        }
                        else
                        {
                            <li><a href="javascript:void(0);">No ORS</a></li>
                        }
                    </ul>
                </li>

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <b>Budget Allotments <i class="fa fa-caret-down"> </i> </b>
                    </a>
                    <ul class="dropdown-menu dropdown-tasks">
                        @if (allotments.Count > 0) {
                            foreach (Allotments data in allotments)
                            {
                                <li><a href="@Url.Action("View","Allotments",new { ID = data.ID })">@data.Title</a></li>
                            }
                        } else {
                            <li><a href="javascript:void(0);" class="colo">No Allotments Created</a></li>
                        }
                    </ul>
                </li>

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Upload Documents <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-alerts">
                        <li>
                            <a href="javascript:void(0);" id="gaa_upload" data-url="@Url.Action("UploadGaa","Home")">
                                GAA Upload
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="javascript:void(0);" id="uacs_upload" data-url="@Url.Action("Index","Uploads")">
                                Upload UACS
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="javascript:void(0);" id="upload_prex" data-url="@Url.Action("UploadPrexc", "Uploads")">
                                Upload PREXC
                            </a>
                        </li>
                    </ul>
                    <!-- /.dropdown-alerts -->
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Budget Reports <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="@Url.Action("SAOB","Reports")">@GlobalData.Year SAOB Report</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <b>Master Data <i class="fa fa-caret-down"> </i> </b>
                    </a>
                    <ul class="dropdown-menu dropdown-tasks">
                        <li><a href="@Url.Action("ExpenseCodes","ExpenseCodes")">UACS Expense Codes</a></li>
                        <li><a href="@Url.Action("Prexc","ExpenseCodes")">Fund Source | PREXC</a></li>
                        <li><a href="@Url.Action("Index","Allotments")">@GlobalData.Year Budget Allotments</a></li>
                        <li><a href="@Url.Action("ORS","Allotments")">@GlobalData.Year ORS</a></li>
                        <li><a href="@Url.Action("Index","Budgets")">Yearly Budget Reference</a></li>
                    </ul>
                </li>
            }
            
            <!-- /.dropdown -->
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li>
                        <a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="@Url.Action("Logoff","Account")"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                    </li>
                </ul>
                <!-- /.dropdown-user -->
            </li>
            <li><strong style="font-size:18px;font-family:sans-serif;">@ViewBag.Menu</strong></li>
            <!-- /.dropdown -->
        </ul>
    
    <!-- /.navbar-header -->
    
  </nav>